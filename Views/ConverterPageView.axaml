<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="600"
             d:DesignHeight="800"
             xmlns:vm="using:UnitConverter.ViewModels"
             x:DataType="vm:ConverterPageViewModel"
             x:Class="UnitConverter.Views.ConverterPageView">
        
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Background="#FFFFFF">
            <TextBlock Text="{Binding FormattedSelectedCurrency}" Classes="h1"/>
            <TextBox BorderThickness="0" Watermark="100" Classes="value"/>
            <StackPanel Margin="20" Classes="currency">
                <ComboBox ItemsSource="{Binding Currencies}"
                          SelectedItem="{Binding SelectedCurrency}"
                          MaxDropDownHeight="100">
                </ComboBox>
            </StackPanel>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Background="#FF7058">
            <StackPanel Margin="20" Classes="currency2">
                <ComboBox ItemsSource=""
                          SelectedItem=""
                          MaxDropDownHeight="100">
                </ComboBox>
            </StackPanel>
            <TextBlock Text="116.77" Classes="value2"/>
            <TextBlock Text="AmerickÃ½ dollar" Classes="h2"/>
        </StackPanel>
    </Grid>
    
    <UserControl.Styles>
        <Style Selector="TextBlock.h1">
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#FF7058"/>
            <Setter Property="Margin" Value="0,60,0,0"/>
            <Setter Property="ZIndex" Value="1"/>
        </Style>
        
        <Style Selector="TextBlock.value">
            <Setter Property="FontSize" Value="90"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#FF7058"/>
            <Setter Property="Margin" Value="0,45,0,0"/>
            <Setter Property="ZIndex" Value="1"/>
        </Style>
        
        <Style Selector="TextBlock.currency">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#FF7058"/>
            <Setter Property="Margin" Value="0,60,0,0"/>
            <Setter Property="ZIndex" Value="1"/>
        </Style>
        
        <Style Selector="TextBlock.h2">
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,60,0,0"/>
            <Setter Property="ZIndex" Value="1"/>
        </Style>
        
        <Style Selector="TextBlock.value2">
            <Setter Property="FontSize" Value="90"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,45,0,0"/>
            <Setter Property="ZIndex" Value="1"/>
        </Style>
        
        <Style Selector="TextBlock.currency2">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,60,0,0"/>
            <Setter Property="ZIndex" Value="1"/>
        </Style>
    </UserControl.Styles>
    
</UserControl>